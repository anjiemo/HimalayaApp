<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlNotifyLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivNotifyLogo"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:layout_marginStart="-10dp"
        android:padding="2dp"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/ivNotifyClose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:padding="4dp"
        android:src="@drawable/img_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="84dp"
        android:orientation="vertical">

        <!--内容标题和作者-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNotifyTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="我是标题"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvNotifyContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="我是副标题"
                android:textSize="9sp"
                tools:ignore="SmallSp" />

        </LinearLayout>

        <!--播放控制-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivNotifyPlayerModeSwitch"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:padding="2dp"
                android:src="@drawable/img_collect" />

            <ImageView
                android:id="@+id/ivNotifyPlayPre"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginStart="34dp"
                android:padding="2dp"
                android:src="@drawable/selector_player_pre" />

            <ImageView
                android:id="@+id/ivNotifyPlayOrPause"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="34dp"
                android:padding="2dp"
                android:src="@drawable/selector_player_play" />

            <ImageView
                android:id="@+id/ivNotifyPlayerNext"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginStart="34dp"
                android:padding="2dp"
                android:src="@drawable/selector_player_next" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>